{% form_theme form 'JSAppBundle:Components:bootstrap_3_layout.html.twig' %}
{#{{ form(form) }}#}

{{ form_start(form) }}

<div class="row js-person-identification">
    <div class="col-md-12">
        <h3>Identification</h3>
        {{ form_row(form.utilisateur.personne.image) }}
    </div>
</div>
<div class="row">

    <div class="col-md-6">
        {{ form_row(form.utilisateur.personne.titre) }}
        {{ form_row(form.utilisateur.personne.prenom) }}
        {{ form_row(form.utilisateur.personne.telephone) }}
        {{ form_row(form.utilisateur.personne.ville) }}
        {{ form_row(form.utilisateur.personne.codePostale) }}
    </div>
    <div class="col-md-6">
        {{ form_row(form.utilisateur.personne.nom) }}
        {{ form_row(form.utilisateur.personne.email) }}
        {{ form_row(form.utilisateur.personne.pays) }}
        {{ form_row(form.utilisateur.personne.etat) }}
        {{ form_row(form.utilisateur.personne.adresse) }}
    </div>
</div>

<div class="row">
    <div class=" col-md-6 js-auteur-institution">
        <h3>Institution</h3>
        {{ form_row(form.institution) }}
        {{ form_row(form.departement) }}
        {{ form_row(form.affiliation) }}
    </div>
    <div class=" col-md-6 js-utilisateur">
        <h3>Connection</h3>
        {{ form_row(form.utilisateur.username) }}
        {{ form_row(form.utilisateur.motDePasse) }}
        {{ form_row(form.utilisateur.roles) }}
        {{ form_row(form.utilisateur.active) }}
    </div>

</div>

<div class="row">

    <div class="col-md-12">
        <button type="submit" class="btn btn-success  btn-flat pull-right" data-action-type=reset><i class="fa fa-save"></i>&nbsp;&nbsp;Enregistrer</button>
        <button type="submit" class="btn btn-default btn-flat pull-right" data-action-type=save><i class="fa fa-undo"></i>&nbsp;&nbsp;Annuler</button>
    </div>

</div>
    {#{{ form_rest(form) }}#}

{{ form_end(form) }}